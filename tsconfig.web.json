{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/preload/*.ts",
    "src/renderer/src/*.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/renderer/src/*.vue",
    "package.json"
  ],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@root/*": [
        "*"
      ]
    }
  }
}

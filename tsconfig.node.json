{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.ts",
    "vite.config.page.ts",
    "vitest.config.ts",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "package.json",
    "electron"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"]
  }
}

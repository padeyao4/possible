// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  createdTime DateTime
  offsetX     BigInt
  offsetY     BigInt
}

model Task {
  id        Int    @id @default(autoincrement())
  name      String
  dataIndex Int
  priority  Int
  projectId Int
}

model Relation {
  id        Int @id @default(autoincrement())
  projectId Int
  sourceId  Int
  targetId  Int
}
